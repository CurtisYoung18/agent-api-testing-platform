{
  "version": 2,
  "buildCommand": "cd client && npm install && npm run build",
  "outputDirectory": "client/dist",
  "installCommand": "npm install",
  "rewrites": [
    {
      "source": "/api/agents/:id",
      "destination": "/api/agent-detail"
    },
    {
      "source": "/api/history/:id",
      "destination": "/api/history"
    },
    {
      "source": "/api/download",
      "destination": "/api/download"
    },
    {
      "source": "/api/tests/stream",
      "destination": "/api/tests-stream"
    },
    {
      "source": "/api/tests",
      "destination": "/api/tests"
    },
    {
      "source": "/api/:path*",
      "destination": "/api/:path*"
    }
  ],
  "functions": {
    "api/**/*.ts": {
      "maxDuration": 300
    }
  }
}
